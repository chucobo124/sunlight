<h1>Product Sheet</h1>
<form class="navbar-form navbar-left" role="search">
  <%= link_to "new"  , new_product_sheet_path , class: "btn btn-default"%>
  <div class="form-group">
    <input type="text" class="form-control" placeholder="Search">
  </div>
    <button type="submit" class="btn btn-default">Submit</button>
</form>
<table class="table table-striped table-bordered">
  <tr>
  	<td>
  	Product Name</td>
  	<td>
  	Set Price</td>
  	<td>
  	Remark</td>
  	<td>
  	Prodcut Class</td>
  	<td>
  	Action</td>
  </tr>
  <tr>
      <% @productsheets.each do |productsheet| %>
    <td>
      <%= productsheet.product_name %></td>
    <td>
      <%= productsheet.set_price %></td>
    <td>
      <%= productsheet.remark %></td>
    <td>
      <%= productsheet.product_class %></td>
    <td>
      <%= link_to "edit"  , edit_product_sheet_path(productsheet.id) , class: "btn btn-success" %>
      <%= link_to "delete"  , product_sheet_path(productsheet.id), :method => :delete  , class: "btn btn-info" %></td>
  </tr>
<%end%>